            }
          });
        },
        select: function(e, i) {
          $.ajax({
            url: '/sugarLevel/' + i.item.value,
            type: 'post',
            success: function(data, textStatus, jQxhr) {
              $("#sugarLevelLunch").val(data);
            },
            error: function(jqXhr, textStatus, errorThrown) {}
          });
        },
        minLength: 1
      });


      <!-- autocomplete dinner-->
      $("#foodDinner").autocomplete({
        source: function(request, response) {
          $.ajax({
            url: '/sugar/' + request.term,
            dataType: "json",
            type: "POST",
            contentType: "application/json; charset=utf-8",
            success: function(data) {
              response($.map(data, function(item) {
                return item;
              }))
            },
            error: function(response) {
              alert(response.responseText);
            },
            failure: function(response) {
              alert(response.responseText);
            }
          });
        },
        select: function(e, i) {
          $.ajax({
            url: '/sugarLevel/' + i.item.value,
            type: 'post',
            success: function(data, textStatus, jQxhr) {
              $("#sugarLevelDinner").val(data);
            },
            error: function(jqXhr, textStatus, errorThrown) {}
          });
        },
        minLength: 1
      });

      <!-- autocomplete snack-->
      $("#foodSnack").autocomplete({
        source: function(request, response) {
          $.ajax({
            url: '/sugar/' + request.term,
            dataType: "json",
            type: "POST",
            contentType: "application/json; charset=utf-8",
            success: function(data) {
              response($.map(data, function(item) {
                return item;
              }))
            },
            error: function(response) {
              alert(response.responseText);
            },
            failure: function(response) {
              alert(response.responseText);
            }
          });
        },
        select: function(e, i) {
          $.ajax({
            url: '/sugarLevel/' + i.item.value,
            type: 'post',
            success: function(data, textStatus, jQxhr) {
              $("#sugarLevelSnack").val(data);
            },
            error: function(jqXhr, textStatus, errorThrown) {}
          });
        },
        minLength: 1
      });
    });
  </script>

  <input type="button" id="btnSubmit" value="Breakfast" />
    <form method="post" action="/breakfast" id="breakfastForm">
    <input type="text" id="food" name="food"/>
    <input type="text" id="sugarLevel" name="sugarLevel" />
    <input type="datetime-local" id="stampTime" name="stampTime" value="2018-06-12T19:30"/>
    <input type="text" id="carb" name="carb" />
    <input type="submit" id="breakfastSubmit" value="Submit" />
  </form>

