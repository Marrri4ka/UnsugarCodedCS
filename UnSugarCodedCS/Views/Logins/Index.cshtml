@{ Layout = "_Layout"; }
@using UnSugarCodedCS.Models;

<h1>UnSugar Coded</h1>
<hr>
<h3>User Accounts</h3>

@if(Model.Count != 0)
{
  <ul>
  @foreach(var login in Model)
  {
    <li><a href="logins/@login.GetId()/logbooks/new">@login.GetName()</a><button class="btn btn-sm"><a href="/logins/@login.GetId()/edit">Edit Profile</a></button><form action="/logins/@login.GetId()/delete" method="post">
        <button class="btn btn-sm" type="submit" name="button">Delete Profile</button>
      </form></li>
  }
  </ul>
}

<h4><a href="/logins/new">Create a new account</a></h4>
<h4><a href="/">Return Home</a></h4>
